{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "/",                                 
    "moduleResolution": "node",                                       
    "resolveJsonModule": true,
    "allowJs": true,                                
    "outDir": "./dist",             
    "esModuleInterop": true,                 
    "forceConsistentCasingInFileNames": true,
    "strict": true,                    
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true                                 
  }
}
