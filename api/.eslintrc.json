{
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "root": true,
  "rules": {
    "semi": ["error", "never"],
    "import/extensions": 0,
    "no-console": 0,
    "no-unused-vars": 0,
    "quotes": ["error", "single", "avoid-escape"],
    "@typescript-eslint/no-explicit-any": "off"
  }
}
